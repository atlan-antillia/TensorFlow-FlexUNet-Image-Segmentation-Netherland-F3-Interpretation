; train_eval_infer.config
; 2025/12/10 (C) antillia.com
; Netherland-F3 segmentation

[model]
model         = "TensorFlowFlexUNet"
generator     =  False

image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = True
normalization  = False
num_classes    = 10

base_filters   = 16
base_kernels   = (11,11)
num_layers     = 8
dropout_rate   = 0.05
dilation       = (1,1)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00007

clipvalue      = 0.4
; Specify "categori5cal_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 

loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
;epochs       = 50
epochs        = 100
batch_size    = 2

;steps_per_epoch  = 200
;validation_steps = 80

; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/Netherland-F3/train/images/"
masks_dir     = "../../../dataset/Netherland-F3/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.4
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/Netherland-F3/valid/images/"
masks_dir  = "../../../dataset/Netherland-F3/valid/masks/"

[test] 
images_dir = "../../../dataset/Netherland-F3/test/images/"
masks_dir  = "../../../dataset/Netherland-F3/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_datatype    = "categorized"
mask_file_format = ".png"

rgb_map={(0,0,0):0,(20,70,245):1,(40,90,235):2,(60,110,225):3,(80,130,215):4,(100,150,205):5,(120,170,195):6,(140,190,185):7,(160,210,175):8,(180,230,165):9,}


